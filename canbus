      const iv = setInterval(()=>{
        const sel = document.querySelector('select.goog-te-combo');
        if (sel && sel.options.length) {
          sel.value = target; sel.dispatchEvent(new Event('change')); clearInterval(iv);
        }
      }, 600);
    });
